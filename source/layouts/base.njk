<body>
	<nav class="nav">
		<div class="flex-row">
			<a href="/"class="nav-link">Home</a>
			<a href="/services"class="nav-link">Services</a>
			<a href="/writing"class="nav-link">Writing</a>
		</div>
	</nav>
		</div>
	<main class="main">
		<h1>{{ heading or 'Hey there!' }}</h1>
